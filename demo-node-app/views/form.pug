extends layout

block content

    -data = data || {}

    if errors
        ul.my-errors
            for error in errors
                li=error.msg 

    form(action="." method="post")
        label(for="name") Name:
        input(
            type="text"
            id="name"
            name="name"
            value=data.name)

        br

        label(for="email") Email:
        
        input(
            type="email"
            id="email"
            name="email"
            value=data.email
        )

        br

        input(type="submit" value="submit")